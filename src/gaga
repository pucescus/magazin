using System;
using System.Windows.Forms;

namespace MathFormulas
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void buttonCalculate_Click(object sender, EventArgs e)
        {
            try
            {
                // Получение значений x, y и z из текстовых полей
                double x = double.Parse(textBoxX.Text);
                double y = double.Parse(textBoxY.Text);
                double z = double.Parse(textBoxZ.Text);

                // Вычисление a и b
                double a = (1 + Math.Sin(x + y)) / (2 + Math.Abs(x - 2 * x / (1 + x * x * y * y))) + x;
                double b = Math.Cos(Math.Atan(1 / z));

                // Вывод результатов в метки
                labelA.Text = "a = " + a.ToString();
                labelB.Text = "b = " + b.ToString();
            }
            catch (Exception ex)
            {
                MessageBox.Show("Ошибка: " + ex.Message, "Ошибка", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
