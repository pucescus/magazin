using System;
using System.Globalization;
using System.Linq;
using System.Windows.Forms;

namespace IntervalChecker
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();

            // Пример начальных значений (необязательно)
            txtA.Text = "1.5";
            txtB.Text = "0.9";
            txtC.Text = "2.8";

            btnCheck.Click += BtnCheck_Click;
        }

        private void BtnCheck_Click(object sender, EventArgs e)
        {
            // Сброс подсветки (если используешь)
            txtA.BackColor = SystemColors.Window;
            txtB.BackColor = SystemColors.Window;
            txtC.BackColor = SystemColors.Window;

            double a, b, c;
            if (!TryParseFlexible(txtA.Text, out a))
            {
                MessageBox.Show("Неверный формат числа в поле A.", "Ошибка ввода");
                txtA.BackColor = System.Drawing.Color.MistyRose;
                txtA.Focus();
                return;
            }
            if (!TryParseFlexible(txtB.Text, out b))
            {
                MessageBox.Show("Неверный формат числа в поле B.", "Ошибка ввода");
                txtB.BackColor = System.Drawing.Color.MistyRose;
                txtB.Focus();
                return;
            }
            if (!TryParseFlexible(txtC.Text, out c))
            {
                MessageBox.Show("Неверный формат числа в поле C.", "Ошибка ввода");
                txtC.BackColor = System.Drawing.Color.MistyRose;
                txtC.Focus();
                return;
            }

            // Проверка принадлежности интервалу (1,3)
            var inside = new System.Collections.Generic.List<string>();
            if (a > 1.0 && a < 3.0) inside.Add($"A = {a}");
            if (b > 1.0 && b < 3.0) inside.Add($"B = {b}");
            if (c > 1.0 && c < 3.0) inside.Add($"C = {c}");

            if (inside.Count == 0)
                lblResult.Text = "Нет чисел, принадлежащих интервалу (1,3).";
            else
                lblResult.Text = "Числа в интервале (1,3): " + string.Join(", ", inside);
        }

        // Удобный парсер: учитывает точку/запятую и локаль
        private bool TryParseFlexible(string s, out double val)
        {
            val = 0;
            if (string.IsNullOrWhiteSpace(s)) return false;
            s = s.Trim();

            if (double.TryParse(s, NumberStyles.Float | NumberStyles.AllowThousands, CultureInfo.CurrentCulture, out val))
                return true;
            if (double.TryParse(s, NumberStyles.Float | NumberStyles.AllowThousands, CultureInfo.InvariantCulture, out val))
                return true;

            // альт. варианты
            var alt = s.Replace(',', '.');
            if (double.TryParse(alt, NumberStyles.Float | NumberStyles.AllowThousands, CultureInfo.InvariantCulture, out val))
                return true;
            alt = s.Replace('.', ',');
            if (double.TryParse(alt, NumberStyles.Float | NumberStyles.AllowThousands, CultureInfo.CurrentCulture, out val))
                return true;

            return false;
        }
    }
}
